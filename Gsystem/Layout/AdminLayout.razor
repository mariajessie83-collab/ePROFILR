@inherits LayoutComponentBase
@using Gsystem.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<div class="admin-shell">
    <header class="admin-top-nav">
        <div class="brand">
            <span class="logo-dot"></span>
            <div>
                <strong>Gsystem</strong>
                <small>Admin Portal</small>
            </div>
        </div>

        <button class="menu-toggle" @onclick="ToggleMenu">â˜°</button>

        <nav class="nav-links @(isMenuOpen ? "open" : string.Empty)">
            @if (isAdminUser)
            {
                <a href="/admin-dashboard" class="nav-link @(IsActiveRoute("/admin-dashboard") ? "active" : "")">Admin</a>
            }
            <a href="/pod-dashboard" class="nav-link @(IsActiveRoute("/pod-dashboard") ? "active" : "")">POD Dashboard</a>
            <a href="/case-records-dashboard" class="nav-link @(IsActiveRoute("/case-records-dashboard") ? "active" : "")">Case Records</a>
        </nav>

        <div class="user-actions">
            <span>Welcome, <strong>@currentUserName</strong></span>
            <button class="logout-btn" @onclick="Logout">Logout</button>
        </div>
    </header>

    <section class="page-banner">
        <div>
            <h1>@PageTitle</h1>
            <p>Manage administrative operations and reporting</p>
        </div>
    </section>

    <main class="admin-content">
        @Body
    </main>
</div>

@code {
    private string currentUserName = "Admin";
    private string PageTitle = "Admin Dashboard";
    private bool isMenuOpen;
    private bool isAdminUser = false;
    private bool isDivisionUser = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserInfo();
    }

    private async Task LoadUserInfo()
    {
        try
        {
            var username = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "username");
            var fullName = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "fullName");
            
            if (!string.IsNullOrEmpty(fullName))
            {
                currentUserName = fullName;
            }
            else if (!string.IsNullOrEmpty(username))
            {
                currentUserName = username;
            }

            var userRole = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userRole");
            isAdminUser = (userRole?.ToLower() ?? "") == "admin";
            isDivisionUser = (userRole?.ToLower() ?? "") == "division";
            
            // Redirect division users to their dashboard
            if (isDivisionUser && !NavigationManager.Uri.Contains("/division-dashboard"))
            {
                NavigationManager.NavigateTo("/division-dashboard", forceLoad: true);
            }
        }
        catch
        {
            // Ignore errors
        }
    }

    private bool IsActiveRoute(string route) =>
        NavigationManager.Uri.Contains(route, StringComparison.OrdinalIgnoreCase);

    private void ToggleMenu() => isMenuOpen = !isMenuOpen;

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        NavigationManager.NavigateTo("/", forceLoad: true);
    }
}

