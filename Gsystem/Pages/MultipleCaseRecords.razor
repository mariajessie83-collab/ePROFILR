@page "/multiple-case-records"
@layout Gsystem.Layout.PODLayout
@using System.Text.Json
@using SharedProject
@using Microsoft.AspNetCore.Components
@inject IJSRuntime JSRuntime
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Case Record Details</PageTitle>

@if (isAuthenticated && isPODUser)
{
    <div class="multiple-records-container">
        <div class="review-header">
            <div class="header-content">
                <button class="btn-back" @onclick="GoBack">
                    <span>‚Üê</span> Back to Dashboard
                </button>
                <div class="header-title">
                    <h2>Case Record Details</h2>
                    <span class="records-count-badge">@caseRecords.Count Record@(caseRecords.Count > 1 ? "s" : "")</span>
                </div>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="loading-overlay">
                <div class="spinner"></div>
                <p>Loading case records...</p>
            </div>
        }

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert @(isSuccess ? "alert-success" : "alert-error")">
                @message
            </div>
        }

        @if (caseRecords.Any() && !isLoading)
        {
            <div class="records-grid">
                @foreach (var record in caseRecords)
                {
                    <div class="record-card">
                        <div class="record-card-header">
                            <h3>@record.StudentOffenderName</h3>
                            <span class="record-id-badge">Record #@record.RecordID</span>
                        </div>

                        <div class="record-card-footer">
                            <button class="btn btn-info" @onclick='() => NavigationManager.NavigateTo($"/case-record-review/{record.RecordID}")'>
                                <span class="btn-icon">üìù</span>
                                View Full Details
                            </button>

                        </div>
                    </div>
                }
            </div>
        }
    </div>
}
else
{
    <div class="access-denied">
        <h2>Access Denied</h2>
        <p>You don't have permission to access this page.</p>
        <a href="/pod-dashboard" class="btn btn-primary">Back to Dashboard</a>
    </div>
}



@code {
    private List<CaseRecordData> caseRecords = new();
    private bool isLoading = false;
    private bool isSuccess = false;
    private string message = string.Empty;
    private bool isAuthenticated = false;
    private bool isPODUser = false;
    private string currentUser = string.Empty;



    protected override async Task OnInitializedAsync()
    {
        await CheckAuthentication();
        
        if (isAuthenticated && isPODUser)
        {
            await LoadCaseRecords();
        }
    }

    private async Task CheckAuthentication()
    {
        try
        {
            var authToken = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            currentUser = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "username");
            var userRole = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userRole");
            var userPosition = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userPosition");
            
            if (!string.IsNullOrEmpty(authToken) && !string.IsNullOrEmpty(currentUser))
            {
                isAuthenticated = true;
                isPODUser = userRole?.Equals("teacher", StringComparison.OrdinalIgnoreCase) == true &&
                           userPosition?.Equals("POD", StringComparison.OrdinalIgnoreCase) == true;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Auth Error: {ex.Message}");
            isAuthenticated = false;
            isPODUser = false;
        }
    }

    private async Task LoadCaseRecords()
    {
        isLoading = true;
        try
        {
            var uri = new Uri(NavigationManager.Uri);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            var idsParam = query["ids"];
            
            if (string.IsNullOrEmpty(idsParam))
            {
                message = "No record IDs provided.";
                isSuccess = false;
                return;
            }

            var recordIds = idsParam.Split(',').Select(int.Parse).ToList();
            
            foreach (var recordId in recordIds)
            {
                var response = await Http.GetAsync($"api/StudentProfileCaseRecord/{recordId}");
                
                if (response.IsSuccessStatusCode)
                {
                    var content = await response.Content.ReadAsStringAsync();
                    var result = JsonSerializer.Deserialize<JsonElement>(content);
                    
                    if (result.TryGetProperty("success", out var success) && success.GetBoolean() &&
                        result.TryGetProperty("data", out var data))
                    {
                        var record = new CaseRecordData();
                        
                        // Use recordId from URL if recordID is not in response
                        record.RecordID = recordId;
                        
                        // Try to get recordID from response, but fallback to URL parameter
                        if (data.TryGetProperty("recordID", out var recId) && recId.TryGetInt32(out var parsedId))
                        {
                            record.RecordID = parsedId;
                            Console.WriteLine($"Loaded RecordID from API: {parsedId}");
                        }
                        else
                        {
                            Console.WriteLine($"Using RecordID from URL: {recordId}");
                        }
                        
                        if (data.TryGetProperty("studentOffenderName", out var studentName))
                            record.StudentOffenderName = studentName.GetString() ?? "";
                        if (data.TryGetProperty("gradeLevel", out var gradeLevel))
                            record.GradeLevel = gradeLevel.GetString() ?? "";
                        if (data.TryGetProperty("trackStrand", out var trackStrand))
                            record.TrackStrand = trackStrand.GetString() ?? "";
                        if (data.TryGetProperty("section", out var section))
                            record.Section = section.GetString() ?? "";
                        if (data.TryGetProperty("adviserName", out var adviserName))
                            record.AdviserName = adviserName.GetString() ?? "";
                        if (data.TryGetProperty("parentGuardianContact", out var contact))
                            record.ParentGuardianContact = contact.GetString() ?? "";
                        if (data.TryGetProperty("violationCommitted", out var violation))
                            record.ViolationCommitted = violation.GetString() ?? "";
                        if (data.TryGetProperty("levelOfOffense", out var level))
                            record.LevelOfOffense = level.GetString() ?? "";
                        if (data.TryGetProperty("dateOfOffense", out var dateOffense))
                            record.DateOfOffense = DateTime.Parse(dateOffense.GetString() ?? DateTime.Now.ToString());
                        if (data.TryGetProperty("detailsOfAgreement", out var details))
                            record.DetailsOfAgreement = details.GetString() ?? "";
                        
                        Console.WriteLine($"Added record: {record.StudentOffenderName} with RecordID: {record.RecordID}");
                        caseRecords.Add(record);
                    }
                }
            }
        }
        catch (Exception ex)
        {
            message = $"Error loading case records: {ex.Message}";
            isSuccess = false;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/pod-dashboard");
    }



    private string GetLevelBadgeClass(string level)
    {
        return level?.ToLower() switch
        {
            "minor" => "badge-minor",
            "major" => "badge-major",
            "severe" => "badge-severe",
            _ => "badge-default"
        };
    }

    private string ConvertMarkdownToBold(string text)
    {
        if (string.IsNullOrEmpty(text))
            return text;
        
        // First, escape any existing HTML
        text = text.Replace("<", "&lt;").Replace(">", "&gt;");
        
        // Convert **text** to <strong>text</strong>
        text = System.Text.RegularExpressions.Regex.Replace(
            text,
            @"\*\*(.+?)\*\*",
            "<strong>$1</strong>"
        );
        
        // Preserve line breaks and spaces
        text = text.Replace("\n", "<br/>");
        
        return text;
    }

    private class CaseRecordData
    {
        public int RecordID { get; set; }
        public string StudentOffenderName { get; set; } = "";
        public string GradeLevel { get; set; } = "";
        public string TrackStrand { get; set; } = "";
        public string Section { get; set; } = "";
        public string AdviserName { get; set; } = "";
        public string ParentGuardianContact { get; set; } = "";
        public string ViolationCommitted { get; set; } = "";
        public string LevelOfOffense { get; set; } = "";
        public DateTime DateOfOffense { get; set; }
        public string DetailsOfAgreement { get; set; } = "";
    }
}

